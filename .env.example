# Server Configuration
PORT=3001
NODE_ENV=development

# Frigate & go2rtc – replace with your Frigate host (IP or hostname)
# Examples: http://localhost:5000  or  http://192.168.1.100:5000
FRIGATESIMPLEUI_URL=http://<your-frigate-host>:5000
GO2RTC_URL=http://<your-frigate-host>:1984

# CORS – use * in dev; in production set to your UI origin(s), comma-separated
CORS_ORIGINS=*

# Logging
LOG_LEVEL=info
LOG_FILE=server.log

# Frigate config path (used when generating config)
FRIGATESIMPLEUI_CONFIG_PATH=/config/config.yml

# Optional: basic auth for the SimpleUI (not Frigate auth)
AUTH_ENABLED=false
AUTH_USERNAME=your-username
AUTH_PASSWORD=your-password

# MQTT – used in generated Frigate config; set to your broker
MQTT_HOST=<your-mqtt-host>
MQTT_PORT=1883
MQTT_USER=your-mqtt-user
MQTT_PASSWORD=your-mqtt-password

# WebRTC (go2rtc) – adjust for your network
WEBRTC_CANDIDATES=localhost:8555,127.0.0.1:8555,<your-frigate-host>:8555,stun:8555
WEBRTC_LISTEN=:8555/tcp

# Detector (Coral) – for generated config
DETECTOR_TYPE=edgetpu
DETECTOR_DEVICE=usb
